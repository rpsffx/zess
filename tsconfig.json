{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "preserve",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleDetection": "force",
    "baseUrl": "./packages",
    "module": "preserve",
    "moduleResolution": "bundler",
    "paths": {
      "@zessjs/core": ["core/src/index.ts"],
      "@zessjs/compiler": ["compiler/src/compiler.ts"],
      "@zessjs/vite-plugin": ["plugin/src/plugin.ts"]
    },
    "resolveJsonModule": true,
    "types": ["node", "@vitest/browser/providers/playwright"],
    "strict": true,
    "noUnusedLocals": true,
    "declaration": true,
    "isolatedDeclarations": true,
    "noEmit": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  },
  "include": [
    "eslint.config.ts",
    "vitest.config.ts",
    "packages/*/src",
    "packages/*/tests",
    "packages/*/types",
    "packages/*/tsdown.config.ts"
  ]
}
