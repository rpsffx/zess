{
  "name": "zess",
  "version": "1.1.6",
  "private": true,
  "packageManager": "pnpm@10.24.0",
  "description": "Zess âš¡ The compiler-driven JavaScript framework for building user interfaces.",
  "type": "module",
  "license": "MIT",
  "author": "Columsys",
  "scripts": {
    "build": "pnpm run --filter=\"./packages/*\" build",
    "dev": "pnpm run --filter=\"./packages/*\" dev",
    "lint": "eslint --cache .",
    "lint:fix": "pnpm run lint --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "format": "prettier --write --cache \"**/*.{ts,tsx}\"",
    "bump": "bumpp -r",
    "postinstall": "pnpx playwright install chromium && simple-git-hooks",
    "docs:dev": "pnpm run --filter=\"zess-website\" dev",
    "docs:build": "pnpm run --filter=\"zess-website\" build",
    "docs:preview": "pnpm run --filter=\"zess-website\" preview"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@sxzz/eslint-config": "^7.4.0",
    "@sxzz/prettier-config": "^2.2.6",
    "@types/node": "^24.10.1",
    "@vitest/browser-playwright": "^4.0.14",
    "@vitest/coverage-istanbul": "^4.0.14",
    "@zessjs/vite-plugin": "workspace:*",
    "bumpp": "^10.3.2",
    "eslint": "^9.39.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.3",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.15.12",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "pnpm commitlint --edit ${1}"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "pnpm lint:fix",
      "pnpm format"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": "@sxzz/prettier-config"
}
