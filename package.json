{
  "name": "zess",
  "version": "1.0.7",
  "private": true,
  "packageManager": "pnpm@10.18.0",
  "description": "Zess âš¡ The compiler-driven JavaScript framework for building user interfaces.",
  "type": "module",
  "license": "MIT",
  "author": "Columsys",
  "scripts": {
    "build": "pnpm run --filter=\"./packages/*\" build",
    "dev": "pnpm run --filter=\"./packages/*\" dev",
    "lint": "eslint --cache .",
    "lint:fix": "pnpm run lint --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "format": "prettier --write --cache \"**/*.{ts,tsx}\"",
    "bump": "bumpp -r",
    "postinstall": "playwright install && simple-git-hooks",
    "docs:dev": "rspress dev",
    "docs:build": "rspress build",
    "docs:preview": "rspress preview"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@rspress/plugin-shiki": "^1.45.6",
    "@sxzz/eslint-config": "^7.2.6",
    "@sxzz/prettier-config": "^2.2.4",
    "@types/node": "^24.6.2",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-istanbul": "^3.2.4",
    "@zessjs/vite-plugin": "workspace:*",
    "bumpp": "^10.2.3",
    "eslint": "^9.37.0",
    "lint-staged": "^16.2.3",
    "playwright": "^1.55.1",
    "prettier": "^3.6.2",
    "rspress": "^1.45.6",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.15.6",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "pnpm commitlint --edit ${1}"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "pnpm lint:fix",
      "pnpm format"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": "@sxzz/prettier-config"
}
